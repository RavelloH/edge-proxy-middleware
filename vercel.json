{
    "rewrites": [
        {
            "source": "/",
            "destination": "/api/edge?url=/"
        },
        {
            "source": "/(https:|http:)/:site*",
            "destination": "/api/edge?url=$1//:site"
        },
        {
            "source": "/:site*/",
            "destination": "/api/edge?url=http://:site/"
        },
        {
            "source": "/:site*",
            "destination": "/api/edge?url=http://:site"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        }
    ]
}
